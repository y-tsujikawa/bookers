<h1>Editing Book</h1>


<% if @book.errors.any? %>
  <div class="error_message">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <div class="button"><%= f.submit 'Update Book' %></div>

  <div class="link">
    <%= link_to "Show", book_path(@book.id) %>
     |
    <%= link_to "Back", "/books" %>
  </div>

<% end %>
